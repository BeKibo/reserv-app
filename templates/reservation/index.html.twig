{% extends 'base.html.twig' %}

{% block title %}Réservations{% endblock %}

{% block body %}
    <div class="max-w-3xl mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-6 text-gray-800">Réservations</h1>

        {# Messages flash #}
        {% for message in app.flashes('success') %}
            <div class="mb-4 rounded-lg bg-green-100 p-4 text-green-800 border border-green-300 shadow">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('danger') %}
            <div class="mb-4 rounded-lg bg-red-100 p-4 text-red-800 border border-red-300 shadow">
                {{ message }}
            </div>
        {% endfor %}

        <h2 class="text-xl font-semibold mb-4 text-gray-700">Nouvelle réservation</h2>

        <div class="bg-white shadow-md rounded-lg p-6">
            {{ form_start(form) }}
                <div class="space-y-4">
                    {{ form_widget(form) }}
                </div>
                <button type="submit" class="mt-6 inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg shadow transition">
                    Réserver
                </button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
