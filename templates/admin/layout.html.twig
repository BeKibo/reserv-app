<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Admin - Gestion des Réservations{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
            <style>
                .sidebar {
                    min-height: 100vh;
                    background-color: #343a40;
                    color: white;
                }
                .sidebar .nav-link {
                    color: rgba(255, 255, 255, 0.8);
                    margin-bottom: 5px;
                }
                .sidebar .nav-link:hover {
                    color: white;
                }
                .sidebar .nav-link.active {
                    background-color: #495057;
                    color: white;
                }
                .notification-badge {
                    position: absolute;
                    top: -5px;
                    right: -5px;
                    font-size: 0.7rem;
                }
                .reservation-pending {
                    background-color: #fff3cd;
                }
                .reservation-confirmed {
                    background-color: #d1e7dd;
                }
                .notification-item {
                    border-left: 4px solid #ffc107;
                    background-color: #fff8e1;
                    margin-bottom: 10px;
                    padding: 10px;
                    border-radius: 4px;
                }
                .main-content {
                    padding: 20px;
                }
            </style>
        {% endblock %}

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <div class="container-fluid">
            <div class="row">
                <!-- Sidebar -->
                <div class="col-md-3 col-lg-2 d-md-block sidebar collapse">
                    <div class="position-sticky pt-3">
                        <div class="text-center mb-4">
                            <h4>Gestion des Réservations</h4>
                        </div>
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link {% if app.request.get('_route') starts with 'admin_dashboard' %}active{% endif %}" href="{{ path('admin_dashboard') }}">
                                    <i class="fas fa-tachometer-alt me-2"></i>
                                    Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if app.request.get('_route') starts with 'admin_reservation' %}active{% endif %}" href="{{ path('admin_reservation_index') }}">
                                    <i class="fas fa-calendar-alt me-2"></i>
                                    Réservations
                                    {% if pending_reservations_count > 0 %}
                                        <span class="badge bg-danger rounded-pill ms-2">{{ pending_reservations_count }}</span>
                                    {% endif %}
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if app.request.get('_route') starts with 'admin_salle' %}active{% endif %}" href="{{ path('admin_salle_index') }}">
                                    <i class="fas fa-door-open me-2"></i>
                                    Salles
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if app.request.get('_route') starts with 'admin_equipement' %}active{% endif %}" href="{{ path('admin_equipement_index') }}">
                                    <i class="fas fa-tools me-2"></i>
                                    Équipements
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if app.request.get('_route') starts with 'admin_critergo' %}active{% endif %}" href="{{ path('admin_critergo_index') }}">
                                    <i class="fas fa-chair me-2"></i>
                                    Critères Ergonomiques
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if app.request.get('_route') starts with 'admin_user' %}active{% endif %}" href="{{ path('admin_user_index') }}">
                                    <i class="fas fa-users me-2"></i>
                                    Utilisateurs
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Main content -->
                <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
                    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                        <h1 class="h2">{% block page_title %}Dashboard{% endblock %}</h1>
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary dropdown-toggle position-relative" type="button" id="notificationsDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-bell"></i>
                                {% if notifications|length > 0 %}
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger notification-badge">
                                        {{ notifications|length }}
                                    </span>
                                {% endif %}
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notificationsDropdown" style="width: 300px;">
                                {% if notifications|length > 0 %}
                                    {% for notification in notifications %}
                                        <li>
                                            <div class="notification-item">
                                                <div class="d-flex justify-content-between">
                                                    <strong>{{ notification.title }}</strong>
                                                    <small>{{ notification.date|date('d/m/Y') }}</small>
                                                </div>
                                                <div>{{ notification.message }}</div>
                                                {% if notification.link %}
                                                    <a href="{{ notification.link }}" class="btn btn-sm btn-outline-primary mt-2">Voir</a>
                                                {% endif %}
                                            </div>
                                        </li>
                                    {% endfor %}
                                {% else %}
                                    <li><div class="dropdown-item text-center">Aucune notification</div></li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>

                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                                {{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}
                    {% endfor %}

                    {% block body %}{% endblock %}
                </main>
            </div>
        </div>
    </body>
</html>
