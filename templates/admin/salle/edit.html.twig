{% extends 'admin/layout.html.twig' %}

{% block title %}Modifier la Salle{% endblock %}
{% block page_title %}Modifier la Salle{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Modifier la salle #{{ salle.id }}</h5>
            <div>
                <a href="{{ path('admin_salle_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Retour à la liste
                </a>
                <a href="{{ path('admin_salle_show', {'id': salle.id}) }}" class="btn btn-info">
                    <i class="fas fa-eye me-1"></i> Voir
                </a>
            </div>
        </div>
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            {{ form_label(form.nom) }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.nom) }}
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.lieu) }}
                            {{ form_widget(form.lieu, {'attr': {'class': 'form-control'}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.lieu) }}
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.capacite) }}
                            {{ form_widget(form.capacite, {'attr': {'class': 'form-control'}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.capacite) }}
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            {{ form_label(form.description) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.description) }}
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.image) }}
                            {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                            <div class="form-text">{{ form_help(form.image) }}</div>
                            <div class="invalid-feedback">
                                {{ form_errors(form.image) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            {{ form_label(form.Equipement) }}
                            {{ form_widget(form.Equipement, {'attr': {'class': 'form-control'}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.Equipement) }}
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            {{ form_label(form.critergo) }}
                            {{ form_widget(form.critergo, {'attr': {'class': 'form-control'}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.critergo) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="fas fa-trash me-1"></i> Supprimer
                    </button>

                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Enregistrer
                    </button>
                </div>
            {{ form_end(form) }}

            <!-- Delete Modal -->
            <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteModalLabel">Confirmation de suppression</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Êtes-vous sûr de vouloir supprimer cette salle ?
                            {% if not salle.reservation.empty %}
                                <div class="alert alert-warning mt-2">
                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                    Cette salle a des réservations associées. La suppression est impossible.
                                </div>
                            {% endif %}
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                            {% if salle.reservation.empty %}
                                <form method="post" action="{{ path('admin_salle_delete', {'id': salle.id}) }}">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ salle.id) }}">
                                    <button type="submit" class="btn btn-danger">Supprimer</button>
                                </form>
                            {% else %}
                                <button type="button" class="btn btn-danger" disabled>Supprimer</button>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
