{% extends 'admin/layout.html.twig' %}

{% block title %}Gestion des Salles{% endblock %}
{% block page_title %}Gestion des Salles{% endblock %}

{% block body %}
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Liste des salles</h5>
            <div>
                <a href="{{ path('admin_salle_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i> Nouvelle salle
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Lieu</th>
                            <th>Capacité</th>
                            <th>Équipements</th>
                            <th>Critères Ergo</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for salle in salles %}
                        <tr>
                            <td>{{ salle.id }}</td>
                            <td>{{ salle.nom }}</td>
                            <td>{{ salle.lieu }}</td>
                            <td>{{ salle.capacite }}</td>
                            <td>
                                <span class="badge bg-info">{{ salle.Equipement|length }}</span>
                            </td>
                            <td>
                                <span class="badge bg-info">{{ salle.critergo|length }}</span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('admin_salle_show', {'id': salle.id}) }}" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('admin_salle_edit', {'id': salle.id}) }}" class="btn btn-sm btn-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal{{ salle.id }}">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>

                                <!-- Delete Modal -->
                                <div class="modal fade" id="deleteModal{{ salle.id }}" tabindex="-1" aria-labelledby="deleteModalLabel{{ salle.id }}" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="deleteModalLabel{{ salle.id }}">Confirmation de suppression</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                Êtes-vous sûr de vouloir supprimer cette salle ?
                                                {% if not salle.reservation.empty %}
                                                    <div class="alert alert-warning mt-2">
                                                        <i class="fas fa-exclamation-triangle me-1"></i>
                                                        Cette salle a des réservations associées. La suppression est impossible.
                                                    </div>
                                                {% endif %}
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                {% if salle.reservation.empty %}
                                                    <form method="post" action="{{ path('admin_salle_delete', {'id': salle.id}) }}">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ salle.id) }}">
                                                        <button type="submit" class="btn btn-danger">Supprimer</button>
                                                    </form>
                                                {% else %}
                                                    <button type="button" class="btn btn-danger" disabled>Supprimer</button>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center">Aucune salle trouvée</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
