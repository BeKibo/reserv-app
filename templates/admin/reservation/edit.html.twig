{% extends 'admin/layout.html.twig' %}

{% block title %}Modifier la Réservation{% endblock %}
{% block page_title %}Modifier la Réservation{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Modifier la réservation #{{ reservation.id }}</h5>
            <div>
                <a href="{{ path('admin_reservation_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Retour à la liste
                </a>
                <a href="{{ path('admin_reservation_show', {'id': reservation.id}) }}" class="btn btn-info">
                    <i class="fas fa-eye me-1"></i> Voir
                </a>
            </div>
        </div>
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            {{ form_label(form.users) }}
                            {{ form_widget(form.users, {'attr': {'class': 'form-control'}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.users) }}
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.salles) }}
                            {{ form_widget(form.salles, {'attr': {'class': 'form-control'}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.salles) }}
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            {{ form_label(form.dateDebut) }}
                            {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control'}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.dateDebut) }}
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.dateFin) }}
                            {{ form_widget(form.dateFin, {'attr': {'class': 'form-control'}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.dateFin) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-check mb-3">
                    {{ form_widget(form.validation, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(form.validation, null, {'label_attr': {'class': 'form-check-label'}}) }}
                    <div class="form-text">
                        {% if not reservation.validation %}
                            <div class="alert alert-warning mt-2">
                                <i class="fas fa-exclamation-triangle me-1"></i>
                                Valider cette réservation confirmera la disponibilité de la salle pour cette période.
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="fas fa-trash me-1"></i> Supprimer
                    </button>

                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Enregistrer
                    </button>
                </div>
            {{ form_end(form) }}

            <!-- Delete Modal -->
            <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteModalLabel">Confirmation de suppression</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Êtes-vous sûr de vouloir supprimer cette réservation ?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                            <form method="post" action="{{ path('admin_reservation_delete', {'id': reservation.id}) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
                                <button type="submit" class="btn btn-danger">Supprimer</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
