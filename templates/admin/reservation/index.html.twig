{% extends 'admin/layout.html.twig' %}

{% block title %}Gestion des Réservations{% endblock %}
{% block page_title %}Gestion des Réservations{% endblock %}

{% block body %}
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Liste des réservations</h5>
            <div>
                <a href="{{ path('admin_reservation_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i> Nouvelle réservation
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <div class="btn-group" role="group">
                    <a href="{{ path('admin_reservation_index') }}" class="btn btn-outline-secondary {{ current_filter is null ? 'active' : '' }}">
                        Toutes
                    </a>
                    <a href="{{ path('admin_reservation_index', {'status': 'confirmed'}) }}" class="btn btn-outline-success {{ current_filter == 'confirmed' ? 'active' : '' }}">
                        Confirmées
                    </a>
                    <a href="{{ path('admin_reservation_index', {'status': 'pending'}) }}" class="btn btn-outline-warning {{ current_filter == 'pending' ? 'active' : '' }}">
                        En attente
                    </a>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Utilisateur</th>
                            <th>Salle</th>
                            <th>Date de début</th>
                            <th>Date de fin</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for reservation in reservations %}
                        <tr class="{{ reservation.validation ? 'reservation-confirmed' : 'reservation-pending' }}">
                            <td>{{ reservation.id }}</td>
                            <td>{{ reservation.users.nom }}</td>
                            <td>{{ reservation.salles.nom }}</td>
                            <td>{{ reservation.dateDebut|date('d/m/Y H:i') }}</td>
                            <td>{{ reservation.dateFin|date('d/m/Y H:i') }}</td>
                            <td>
                                {% if reservation.validation %}
                                    <span class="badge bg-success">Confirmée</span>
                                {% else %}
                                    <span class="badge bg-warning">En attente</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('admin_reservation_show', {'id': reservation.id}) }}" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('admin_reservation_edit', {'id': reservation.id}) }}" class="btn btn-sm btn-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    {% if not reservation.validation %}
                                        <a href="{{ path('admin_reservation_validate', {'id': reservation.id}) }}" class="btn btn-sm btn-success" onclick="return confirm('Êtes-vous sûr de vouloir valider cette réservation?')">
                                            <i class="fas fa-check"></i>
                                        </a>
                                    {% endif %}
                                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal{{ reservation.id }}">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>

                                <!-- Delete Modal -->
                                <div class="modal fade" id="deleteModal{{ reservation.id }}" tabindex="-1" aria-labelledby="deleteModalLabel{{ reservation.id }}" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="deleteModalLabel{{ reservation.id }}">Confirmation de suppression</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                Êtes-vous sûr de vouloir supprimer cette réservation ?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                <form method="post" action="{{ path('admin_reservation_delete', {'id': reservation.id}) }}">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
                                                    <button type="submit" class="btn btn-danger">Supprimer</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center">Aucune réservation trouvée</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
