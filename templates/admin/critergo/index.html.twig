{% extends 'admin/layout.html.twig' %}

{% block title %}Gestion des Critères Ergonomiques{% endblock %}
{% block page_title %}Gestion des Critères Ergonomiques{% endblock %}

{% block body %}
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Liste des critères ergonomiques</h5>
            <div>
                <a href="{{ path('admin_critergo_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i> Nouveau critère
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Catégorie</th>
                            <th>Salles associées</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for critergo in critergos %}
                        <tr>
                            <td>{{ critergo.id }}</td>
                            <td>{{ critergo.nom }}</td>
                            <td>{{ critergo.categorie }}</td>
                            <td>
                                <span class="badge bg-info">{{ critergo.salles|length }}</span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('admin_critergo_show', {'id': critergo.id}) }}" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('admin_critergo_edit', {'id': critergo.id}) }}" class="btn btn-sm btn-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal{{ critergo.id }}">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>

                                <!-- Delete Modal -->
                                <div class="modal fade" id="deleteModal{{ critergo.id }}" tabindex="-1" aria-labelledby="deleteModalLabel{{ critergo.id }}" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="deleteModalLabel{{ critergo.id }}">Confirmation de suppression</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                Êtes-vous sûr de vouloir supprimer ce critère ergonomique ?
                                                {% if not critergo.salles.empty %}
                                                    <div class="alert alert-warning mt-2">
                                                        <i class="fas fa-exclamation-triangle me-1"></i>
                                                        Ce critère est associé à des salles. La suppression est impossible.
                                                    </div>
                                                {% endif %}
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                {% if critergo.salles.empty %}
                                                    <form method="post" action="{{ path('admin_critergo_delete', {'id': critergo.id}) }}">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ critergo.id) }}">
                                                        <button type="submit" class="btn btn-danger">Supprimer</button>
                                                    </form>
                                                {% else %}
                                                    <button type="button" class="btn btn-danger" disabled>Supprimer</button>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center">Aucun critère ergonomique trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
